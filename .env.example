# This file contains all environment variables for the monorepo
# Copy to .env.local and fill in your values

# ===================
# API Configuration
# ===================

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/content-workflow

# Replicate API
REPLICATE_API_TOKEN=r8_your_token_here

# Server Configuration
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Webhook Base URL (for Replicate webhooks in production)
WEBHOOK_BASE_URL=http://localhost:3001

# ===================
# Web Configuration
# ===================

# API URL (for frontend to call backend)
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Public URL (for OAuth callbacks, etc.)
NEXT_PUBLIC_URL=http://localhost:3000
