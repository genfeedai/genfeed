{
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "1.3.6",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css}": [
      "bunx biome check --write"
    ]
  },
  "name": "content-workflow-monorepo",
  "private": true,
  "scripts": {
    "build": "bun run --filter '*' build",
    "build:api": "bun run --filter @content-workflow/api build",
    "build:web": "bun run --filter @content-workflow/web build",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "dev": "bunx concurrently \"bun run dev:api\" \"bun run dev:web\"",
    "dev:api": "bun run --filter @content-workflow/api start:dev",
    "dev:web": "bun run --filter @content-workflow/web dev",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "pre:install": "bun update --latest --recursive && bun install",
    "prepare": "husky",
    "sync:replicate": "bun run scripts/sync-replicate-schemas.ts",
    "test": "bun run --filter '*' test",
    "test:api": "bun run --filter @content-workflow/api test",
    "test:web": "bun run --filter @content-workflow/web test",
    "test:coverage": "bun run --filter '*' test:coverage"
  },
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
