{
  "resolutions": {
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4"
  },
  "overrides": {
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "1.3.6",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "turbo": "^2.7.5",
    "typescript": "5.9.3"
  },
  "license": "AGPL-3.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css}": [
      "bun run biome check --write"
    ]
  },
  "name": "genfeed",
  "private": true,
  "scripts": {
    "build": "bun run --filter '*' build",
    "build:api": "bun run --filter @genfeedai/api build",
    "build:web": "bun run --filter @genfeedai/web build",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "deps:update": "bunx npm-check-updates -u && bun install",
    "dev": "turbo dev --filter=@genfeedai/api --filter=@genfeedai/web",
    "dev:api": "bun run --filter @genfeedai/api start:dev",
    "dev:web": "bun run --filter @genfeedai/web dev",
    "turbo:api": "turbo dev --filter=@genfeedai/api",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepare": "husky",
    "sync:replicate": "bun run scripts/sync-replicate-schemas.ts",
    "test": "bun run --filter '*' test",
    "test:api": "bun run --filter @genfeedai/api test",
    "test:coverage": "bun run --filter '*' test:coverage",
    "test:web": "bun run --filter @genfeedai/web test"
  },
  "version": "0.1.0",
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
